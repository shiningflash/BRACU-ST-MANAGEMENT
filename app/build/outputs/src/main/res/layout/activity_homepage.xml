<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomepageActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#21327E">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Homepage"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/logout_button"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="logout"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:background="#FFC107"
            android:layout_marginLeft="135dp"
            />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="90dp"
        android:layout_marginHorizontal="40dp">

        <Button
            android:id="@+id/student_list_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:text="Student List"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="#009688"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/st_list_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:text="Student Tutor List"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="#2196F3"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/faculty_list_button"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Faculty List"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:background="#3F51B5"
            />

        <Button
            android:id="@+id/my_profile_button"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="My Profile"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:background="#673AB7"
            />

        <Button
            android:id="@+id/applyST_button"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Apply Student Tutor"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:background="#4CAF50"
            />

        <Button
            android:id="@+id/show_applicantList_button"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Show Applicant List"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:background="#FF5722"
            />
    </LinearLayout>

</RelativeLayout>