            <TextView
                style="@style/TableHeader1"
                android:text="wed" />

            <TextView
                style="@style/TableHeader1"
                android:text="thu" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="08:00 - 09:20"
                android:layout_weight="2"
                style="@style/TableHeader" />

            <TextView
                android:id="@+id/a8"
                android:clickable="true"
