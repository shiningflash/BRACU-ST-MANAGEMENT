<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ConfirmSignupActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#21327E">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Registration"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:visibility="gone"
            />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="60dp"
        android:layout_marginHorizontal="40dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:src="@drawable/bracu_logo"/>

        <Button
            android:id="@+id/appLebel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Tutor Management"
            android:textColor="#240202"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/send_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:text="Send Confirmation Code"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="@color/login_button"
            android:textColor="#FFFFFF"
            />

        <EditText
            android:id="@+id/confirmation_code"
            style="@style/MyEditTextStyle1"
            android:hint="eg: 123456"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:selectAllOnFocus="true"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter 6 digit confirmation code that sent in your mail to complete registration process"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/student_id"
            style="@style/MyEditTextStyle1"
            android:hint="Enter your student id"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:selectAllOnFocus="true"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:text="Confirm Account"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="@color/login_button"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="BACK"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="#4CAF50"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            />

    </LinearLayout>

</RelativeLayout>